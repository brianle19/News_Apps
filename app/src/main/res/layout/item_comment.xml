<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    android:padding="4dp"
    android:gravity="center_vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_user"
        android:src="@mipmap/ic_user"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_user"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtv_username"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trần Quang Đại"/>

        <TextView
            android:id="@+id/txtv_content"
            android:layout_marginTop="5dp"
            android:text="Một lầnbí mật tổ chức và chỉ công bố với truyền thông sau khi hoàn thành."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/12/01 12:22:33"
        android:id="@+id/txtv_datetime"/>


</RelativeLayout>