<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:id="@+id/img"
        android:layout_width="180dp"
        android:layout_height="100dp" />

    <TextView
        android:lines="3"
        android:id="@+id/txtv_title"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:maxLines="3"
        android:text="Hiện nay, chương trình học tiếng Anh trực tuyến Topica Native đang trở thành giải pháp cho hàng ngàn người đi làm bận rộn vẫn có thể nâng cao trình độ tiếng Anh giao tiếp. "
        android:layout_width="180dp"
        android:layout_height="wrap_content" />

</LinearLayout>