<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#3F51B5"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="8dp"
        android:background="#283593"
        android:gravity="center"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/txtv_top"
        style="@style/MyFirstStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin người dùng"/>


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_below="@id/txtv_top"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MyFirstStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="Lê Xuân Thái"
                style="@style/MyFirstStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtv_fullname"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MyFirstStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="19.01.1999"
                style="@style/MyFirstStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtv_dob"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MyFirstStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="thalx"
                style="@style/MyFirstStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtv_username"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MyFirstStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="76 Lạc long quân"
                style="@style/MyFirstStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtv_address"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MyFirstStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="01677311452"
                style="@style/MyFirstStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtv_phone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MyFirstStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="thaile@gmail.com"
                style="@style/MyFirstStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtv_email"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:textSize="12dp"
                android:id="@+id/btn_editinfor"
                style="@style/MyButtonStyle"
                android:text="Chỉnh sửa thông tin"/>

            <Button
                android:textSize="12dp"
                android:id="@+id/btn_changepass"
                style="@style/MyButtonStyle"
                android:text="Đổi mật khẩu"/>

            <Button
                android:textSize="12dp"
                android:id="@+id/btn_logout"
                style="@style/MyButtonStyle"
                android:text="Đăng xuất"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:padding="5dp"
        android:textSize="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/top_layout"
        android:layout_centerInParent="true"
        android:id="@+id/btn_exit"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"/>
</RelativeLayout>