<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<RelativeLayout
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thaile.com.aiw_client_finalproject.Activity.MainActivity">

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:indeterminate="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_first_news"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/imageView" />
        <TextView
            android:id="@+id/txtv_lastest_title"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtv_lastest_shortintro"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"/>

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtv_date"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txtv_updated"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:scrollbarStyle="outsideOverlay"
        android:dividerHeight="1dp"
        android:id="@+id/mylistview"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </ListView>
</LinearLayout>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>